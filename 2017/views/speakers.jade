.spkrs#speakers
  .center
    h2.section__title #{speakers.title}
    .spkrsl

      - var counter=0
      - var css=''

      each speaker, index in speakers.items
        - counter++
        if counter <= 2
          - css='left'
        if counter > 2
          - css='right'
        if counter >= 4
          - counter=0

        div(class="spkrs-i #{css}")
          .spkrs-ic
            .spkrs-p(style="background:url(#{speaker.photo});background-size:cover;")
            .spkrs-info
              h3.spkrs-nm #{speaker.name}
              span.spkrs-bio #{speaker.bio}
              .spkrs-scl
                each social, socialindex in speaker.social
                  span
                    a(href="#{social.url}", target="_blank") #{social.name}
