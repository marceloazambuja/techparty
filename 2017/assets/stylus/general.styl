.root
  font-family 'Open Sans', sans-serif
  font-size 16px
  min-height 100%
  min-width 320px
  position relative
  line-height 24px
  color $scale5

.center
  position relative
  max-width 1230px
  padding 0 15px
  margin 0 auto

.btn
  vertical-align top
  text-align center
  border 1px solid $scale1
  background $scale1
  display inline-block
  text-transform uppercase

.site__content
  position relative
  z-index 3

.section__title
  font-size 24px
  margin-bottom 50px
  color $scale5

.none
  display none
