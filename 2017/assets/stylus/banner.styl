$desktop = 1000px
$tablet = 768px
$variantion1 = 460px
$variantion2 = 600px

.banner
  margin-bottom 0
  min-height 0
  position relative
  text-align center
  line-height 20px
  font-size 23px
  color $scale3

.banner__images
  padding-bottom 0
  .image
    left 0
    top 0
    max-width 100%
    position relative
  .desktop
    display block
    width 100%
    +below($desktop)
      display none
  .tablet
    display none
    width 100%
    +between($tablet, $desktop)
      display block
  .mobile
    display none
    width 100%
    +below($tablet)
      display block

.banner__layout
  display flex
  -webkit-box-pack center
  justify-content flex-start
  -webkit-box-align center
  align-items center
  position absolute
  z-index 2
  top 0
  left 0
  width 100%
  height 100%
  padding 80px 0 26px

.swipe__container
  width 100%
  margin 0 auto
  position relative
  z-index 1

.swipe-wrapper
  transform translate3d(0,0,0)
  position relative
  width 100%
  height 100%
  z-index 1
  display flex
  transition-property transform
  box-sizing content-box

.swipe-slide
  padding 0
  flex-shrink 0
  width 100%
  height 100%
  position relative

.time-schedule
  padding 20px 0
  .btn
    width 216px
    height 64px
    padding 22px 10px
    font-size 19px
    margin 0 0 16px
    color $scale2
    +between($variantion1, $desktop)
      width 150px
      height 40px
      padding 9px 10px 0
      font-size 14px
      margin 0 0 16px
    +below($variantion1)
      width 140px
      height 28px
      padding 8px 10px 0
      font-size 13px
      margin 0 0 16px
      line-height 10px

.time-schedule__pic
  margin 0 auto 14px
  width 64px
  height 64px
  img
    display block
    width 100%
    height auto
  +between($tablet, $desktop)
    margin: 32px auto 10px;
    width: 34px;
    height: 34px;
  +below($variantion1)
    margin 0 auto 10px
    width 34px
    height 34px

.site__title_big
  margin 32px 0
  font-size 63px
  line-height 62px
  +above($variantion2)
    font-size 43px
    line-height 49px
  +below($variantion1)
    font-size 25px
    line-height 26px
    margin 0 0 21px

.time-schedule__place
  margin 0 5px 38px
  font-size 100%
  display block
  +below($variantion1)
    font-size 14px
    margin 0 8px 10px

.time-schedule__text
  font-size 18px
  line-height 28px
  margin-bottom 30px
  letter-spacing -0.5px
  +below($variantion1)
    font-size 13px
    line-height 15px
    margin-bottom 15px
    
.toggle-day-wrapper
  text-align center
    
.toggle-day
  display none
  max-width 100%

img.toggle-day
  height 315px