$desktop = 1000px
$tablet = 768px

.schedule
  padding 67px 0
  .section__title
    text-align center

.schedule__layout
  width 100%

.schedule-nav
  text-align center
  text-transform uppercase
  a
    width 190px
    margin 0 2px
    display inline-block
    font-weight 700
    padding 9px 0
    &.active
      background $scale7

.schedule-talks
  margin-top 70px

.schedule-talk
  padding 25px 50px
  border-top 1px solid $scale4
  &.open
    border 0
    box-shadow 0 0 40px 5px rgba(0, 0, 0, 0.1)
    .schedule-talk__close
    .schedule-talk__details
      display block
  +below($tablet)
    padding 25px 0

.schedule-talk__time
  width 14.9%
  display inline-block
  +below($tablet)
    width 100%
    text-align center

.schedule-talk__title
  display inline-block
  font-size 20px
  +below($tablet)
    width 100%
    text-align center

.schedule-talk__close
  float right
  display inline-block
  font-weight 700
  font-size 35px
  display none
  +below($tablet)
    width 100%
    text-align center


.schedule-talk__details
  padding 8px 0 18px 15%
  direction rtl
  text-align left
  display none
  +below($tablet)
    padding 8px 10px

.schedule__speakers-group
  display inline-block
  vertical-align top
  width 47.3%
  padding 0 0 0 10.6%
  direction ltr
  text-align center
  +below($tablet)
    padding 0
    width 100%

.schedule__speakers-group__item
  width 100px
  // height 100px
  float left
  margin 0 10px 0 0
  display inline-block
  img
    width 100px
  h3
    text-align center
    font-size 15px
    line-height 17px
  +below($tablet)
    float none
    margin 30px 10px

.schedule__info
  display inline-block
  vertical-align top
  max-width 100%
  width 41%
  padding 4px 0 0
  direction ltr
  +below($tablet)
    width 100%
    text-align center

.schedule-talk__tags
  margin-top 20px
  span
    margin-right 5px
    padding 3px 11px
    font-size 13px
    &:nth-child(1)
      background $scale1
      color $scale2
    &:nth-child(2)
      background $scale7
    &:nth-child(3)
      background $scale8
      color $scale2
    &:nth-child(4)
      background $scale4
